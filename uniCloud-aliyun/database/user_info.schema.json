{
	"bsonType": "object",
	"required": ["username", "create_time"],
	"permission": {
		"read": false, // 前端非admin的读取记录权限控制。默认值是false，即可以不写。可以简单的true/false，也可以写表达式
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": { // 表的字段清单
		"_id": { // 字段名称，每个表都会带有_id字段
			"description": "ID，系统自动生成"
		},
		"username": {
			"bsonType": "string",
			"title": "用户名"
		},
		"create_time": {
			"bsonType": "timestamp",
			"title": "创建时间"
		}
	},
	"fieldRules": [
		// 字段之间的约束关系。比如字段开始时间小于字段结束时间。也可以只校验一个字段。支持表达式
	]
}

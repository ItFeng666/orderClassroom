{
	"bsonType": "object",
	"required": [
		"user_id",
		"username",
		"classroom_size",
		"classroom_id",
		"phone",
		"create_time"
	],
	"permission": {
		"read": false, // 前端非admin的读取记录权限控制。默认值是false，即可以不写。可以简单的true/false，也可以写表达式
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": { // 表的字段清单
		"_id": { // 字段名称，每个表都会带有_id字段
			"description": "ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"title": "预约人id",
			"foreignKey": "user_info._id" // 使用foreignKey表示，此字段关联user_info表的_id。
		},
		"username": {
			"bsonType": "string",
			"title": "预约人名称"
		},
		"classroom_size": {
			"bsonType": "int",
			"title": "教室大小"
		},
		"classroom_id": {
			"bsonType": "string",
			"title": "教室id",
			"foreignKey": "classroom._id" // 使用foreignKey表示，此字段关联classroom表的_id。
		},
		"phone": {
			"bsonType": "string",
			"title": "联系电话"
		},
		"create_time": {
			"bsonType": "timestamp",
			"title": "创建时间"
		}
	},
	"fieldRules": [
		// 字段之间的约束关系。比如字段开始时间小于字段结束时间。也可以只校验一个字段。支持表达式
		// {
		// 	"rule": "order_start_time < order_end_time",
		// 	"errorMessage": "预约结束时间需大于预约开始时间"
		// }
	]
}
